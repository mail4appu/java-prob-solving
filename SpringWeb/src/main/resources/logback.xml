<?xml version="1.0" encoding="UTF-8"?>
<!-- configuration file for LogBack (slf4J implementation) See here for more 
	details: http://gordondickens.com/wordpress/2013/03/27/sawing-through-the-java-loggers/ -->
<configuration scan="true" scanPeriod="30 seconds">
	<property name="LOG_PATTERN"
		value="%d{HH:mm:ss} [%thread] %-5level %class{36} - %M:%L - %msg%n" />
		
	<include optional="true" url="${confDir}logback-include.xml" />

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>${LOG_PATTERN}</pattern>
		</encoder>
	</appender>

	<logger name="org.springframework" level="ERROR" />
	<logger name="org.springframework.jdbc" level="ERROR" />
	<logger name="ch.qos.logback.classic" level="ERROR" />
	<logger name="org.apache.catalina.servlets" level="TRACE" />
    <logger name="com.idrive" level="DEBUG"/>


	<root level="DEBUG">
		<appender-ref ref="CONSOLE" />
	</root>
</configuration>